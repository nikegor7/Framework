{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

<style>
.layer {
   text-align: center;
   width: 60%;
   margin: auto;
   margin-top: 100px;
   border-radius: 10px;
   background-color: #b1f3f7;	
   filter: drop-shadow(15px 14px 14px #011161);
   padding: 20px;
font: 25px Arial, Helvetica, sans-serif;
}

body {
background-position: top;
background: rgb(238,174,202);
background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
}

button {	
  width: 220px;
  height: 50px;
  margin-left: 4px;
  text-align: center;
  color: rgb(15, 15, 111);
  background-color: rgb(241, 146, 178);
  border-radius: 10px;
  font-size: 16px;
padding: 10px;
}

.table { border-collapse: collapse; } 
      .table th, td { 
          font-size: 18px;
        color: black;
         border-bottom: 1px solid black; 
         padding: 10px;
         width: 250px; 
         text-align: left; 
         align: left; 
      }

</style>

    <h1 align="center">Selected product with id {{ product.id }}</h1>
<div align="center" class="layer">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>


    {{ include('product/_delete_form.html.twig') }}


    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">update</a>
</div>
{% endblock %}