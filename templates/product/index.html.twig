{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
<style>
.layer {
   text-align: center;
   width: 60%;
   margin: auto;
   margin-top: 100px;
   border-radius: 10px;
   background-color: #b1f3f7;	
   filter: drop-shadow(15px 14px 14px #011161);
   padding: 20px;
font: 25px Arial, Helvetica, sans-serif;
}
.table { border-collapse: collapse; } 
      .table th, td { 
          font-size: 18px;
        color: black;
         border-bottom: 1px solid black; 
         padding: 10px;
         width: 250px; 
         text-align: left; 
         align: left; 
      }

body {
background-position: top;
background: rgb(238,174,202);
background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
}
</style> <body>
	<h1 align="center">List of products</h1>
<div align="center" class="layer"> 
	<a href="{{ path('product_new') }}">Create new product</a></br></br>
	<table align="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.description }}</td>
					<td>
						<a href="{{ path('product_show', {'id': product.id}) }}">select</a>
						<a href="{{ path('product_edit', {'id': product.id}) }}">update</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Table is empty</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div> </body>

{% endblock %}